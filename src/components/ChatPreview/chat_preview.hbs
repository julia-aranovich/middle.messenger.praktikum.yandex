<a class="chat-block {{#if unread_count}}unread{{/if}} {{#if selected}}selected{{/if}}">
  {{{avatar}}}
  <div class="title">{{title}}</div>
  <div class="meta">
    <div class="unread-count-wrapper">
      {{#if unread_count}}
        <div class="unread-count">{{unread_count}}</div>
      {{/if}}
    </div>
  </div>
</a>
